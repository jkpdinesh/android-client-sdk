<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="MaterialDropDownButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableEnd">@mipmap/ic_down_arrow</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">@dimen/_8dp</item>
        <item name="rippleColor">#25A4A3A3</item>
    </style>

    <style name="MeetingControlButtons">
        <item name="android:layout_width">@dimen/_56dp</item>
        <item name="android:layout_height">@dimen/_56dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:layout_marginBottom">@dimen/_20dp</item>
    </style>

    <style name="TextAppearance.Regular14" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/dimen_14_sp</item>
    </style>

</resources>